@model IEnumerable<cocycle_admin.Models.EmailAccount>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<div class="content-header">
    <div class="container">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Email Setting</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Email Setting</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<section class="content">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-md-offset-3">
                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title">Email Config</h3>
                    </div>
                    <div class="card-body">
                       
                        <table class="table table-responsive">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.EnableSSL)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.UseDefaultCredentials)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Modified)
                                </th>

                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EnableSSL)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UseDefaultCredentials)
                            </td>
                            <td>
                                @item.Modified.ToString("dd-mm-yyyy ")
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
                            </td>
                        </tr>
                            }

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<script src="~/Content/Assets/plugins/jquery/jquery.js"></script>
@if ((string)TempData["message"] != "")
{

    <script type="text/javascript">
        debugger;
        var msgtype = '@TempData["message"]';
    $(function () {
    const Toast = Swal.mixin({
    toast: true,
    position: 'top-end',
    showConfirmButton: false,
    timer: 3000
    });

        if (msgtype == "Saved") {
            toastr.success('Saved Successfully')
        }
        if (msgtype == "Updated") {
            toastr.success('Updated Successfully')
        }
        if (msgtype == "Delete") {
            toastr.success('Deleted Successfully')
        }
        if (msgtype == "All already Exists") {
            toastr.error('Product Name is Already Exist')
        }
    });

    </script>
}
