@model cocycle_admin.Models.Routes

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()



<div class="content-header">
    <div class="container">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Routes</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Route</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<section class="content">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-danger">
                    <div class="card-header">
                        <h3 class="card-title">Delete Route</h3>
                    </div>
                    <div class="card-body">

                        <h3>Are you sure you want to delete this?</h3>
                        <div class="row">
                            <div class="col-md-6">
                                <dl class="dl-horizontal">
                                    <dt>
                                        @Html.DisplayNameFor(model => model.RouteType)
                                    </dt>

                                    <dd>
                                        @if (Model.RouteType == 1)
                                        {
                                            <h6>  Commute</h6>
                                        }
                                        else
                                        {
                                            <h6>  Social</h6>
                                        }
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.PosterImage)
                                    </dt>

                                    <dd>
                                        <img src="@Model.PosterImage" />
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.PostCode)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.PostCode)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.StartingPoint)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.StartingPoint)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.EndPoint)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.EndPoint)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.StartTime)
                                    </dt>

                                    <dd>
                                        @Model.StartTime.ToString("dd-MMM-yyyy hh:mm tt")
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.EndTime)
                                    </dt>

                                    <dd>
                                        @Model.EndTime.ToString("dd-MMM-yyyy hh:mm tt")
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.AreaId)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.Area.AreaName)
                                    </dd>

                                    


                                </dl>
                            </div>
                            <div class="col-md-6">
                                <dl class="dl-horizontal">
                                   
                                    <dt>
                                        @Html.DisplayNameFor(model => model.StateId)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.State.StateName)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.Message)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.Message)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.CreatedBy)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.CreatedBy)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.Created)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.Created)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.RequestedBy)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.RequestedBy)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.RequestedDate)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.RequestedDate)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.IsApproved)
                                    </dt>

                                    <dd>
                                        @if (Model.IsApproved == true)
                                        {
                                            <span class="badge badge-success">Approved</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-danger">Pending</span>
                                        }
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.Addreturn)
                                    </dt>

                                    <dd>
                                        @if (Model.Addreturn == true)
                                        {
                                            <span class="badge badge-success">Return Journey</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-info">One way Journey</span>
                                        }
                                    </dd>



                                </dl>
                            </div>
                        </div>

                     
                        <div class="form-actions no-color">
                            <input type="submit" value="Delete" class="btn btn-danger" /> |
                            @Html.ActionLink("Back to List", "Index")
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
</section>
}